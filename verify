#!/usr/bin/env bash


if [[ -f CHECKSUM ]]; then
	echo "Verifying files against CHECKSUM..."
	echo ""
	sha512sum --check CHECKSUM
	exit_code=${PIPESTATUS[0]}
	if [[ $exit_code -eq 0 ]]; then
		echo ""
		echo "All files verified successfully!"
	else
		echo ""
		echo "Verification failed for one or more files."
	fi
	exit $exit_code
else
	echo ""
	echo "Error: CHECKSUM file not found!"
	exit 1
fi
